{
  "name": "api",
  "module": "./src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch ./src/index.ts",
    "build": "bun build ./src/index.ts ./src/routes/* ./src/middleware/* --outdir ./output --entry-naming [dir]/[name].[ext] --format esm --target bun",
    "preview": "bun run ./output/index.js",
    "start": "pm2 start 'bun ./output/index.js' --name bun-api"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^5.9.1"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "hono": "^4.0.1",
    "postgres": "^3.4.3",
    "redis": "^4.6.13"
  }
}